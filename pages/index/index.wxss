/**index.wxss**/
.container {
  scroll-behavior:smooth;
}
.group {
  background-color: #f3f3f3;
  padding: 20rpx 30rpx;
  font-size: 40rpx;
  font-weight: bold;
  position: -webkit-sticky;
  position: sticky;
  position: -webkit-sticky;
  top: 0;
}

.words {
  padding: 30rpx 40rpx;
  border-bottom: 1px solid #f3f3f3;
}

.words .title {
  font-size: 40rpx;
}

.attributes {
  font-style: italic;
  margin-right: 20rpx;
  color: #fc6b05;
}

.laba {
  color: rgb(0, 0, 0, 0.5);
  margin-right: 40rpx;
}

.activeLaba {
  -webkit-animation: 0.1s linear 0s infinite alternate laba;
  animation: 0.1s linear 0s infinite alternate laba;
}

@keyframes laba {
  from {
    color: rgb(0, 0, 0, 0.5);
  }

  to {
    color: #0083E9;
  }
}