/**index.wxss**/
.container {
  scroll-behavior:smooth;
}
.group {
  background-color: #f3f3f3;
  padding: 20rpx 30rpx;
  font-size: 40rpx;
  font-weight: bold;
  position: -webkit-sticky;
  position: sticky;
  position: -webkit-sticky;
  top: 0;
}

.words {
  padding: 30rpx 40rpx;
  border-bottom: 1px solid #f3f3f3;
}

.words .title {
  font-size: 40rpx;
}

.attributes {
  font-style: italic;
  margin-right: 20rpx;
  color: #fc6b05;
}

.laba {
  color: rgb(235, 51, 66);
  margin-left: 20rpx;
}

.activeLaba {
  -webkit-animation: 0.1s linear 0s infinite alternate laba;
  animation: 0.1s linear 0s infinite alternate laba;
}
.content{
  color:rgb(165, 165, 182);
}
.interpretation{
  color:rgb(85, 85, 105);
}
@keyframes laba {
  from {
    color: rgb(165, 165, 182);
  }

  to {
    color:  rgb(235, 51, 66);
  }
}